<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="40dp">

    <ImageButton
        android:id="@+id/back_button_popup"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="start"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="12dp"
        android:src="@drawable/baseline_arrow_back_ios_new_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/imgPetDetail"
        app:layout_constraintBottom_toTopOf="@id/imgPetDetail"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/popup_text"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:fontFamily="@font/alata"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imgPetDetail"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="@drawable/img_pet_detail"
        android:padding="10dp"
        android:textSize="15sp"
        android:fontFamily="@font/alata"
        app:layout_constraintTop_toBottomOf="@+id/popup_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/pet_age"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Pet's date of birth : "
        android:textSize="15sp"
        android:fontFamily="@font/alata"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/imgPetDetail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/pet_gender"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Pet's gender : "
        android:textSize="15sp"
        android:fontFamily="@font/alata"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/pet_age"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/pet_type_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Pet Type : "
        android:textSize="15sp"
        android:fontFamily="@font/alata"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/pet_gender"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/pet_breed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Pet's breed : "
        android:textSize="15sp"
        android:padding="10dp"
        android:fontFamily="@font/alata"
        app:layout_constraintTop_toBottomOf="@id/pet_type_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
